<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.scampa.starbuzzapp.CatalogueActivity">

    <ImageView
        android:id="@+id/ordertracker_logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ordertracker_logo"
        android:contentDescription="@string/ordertracker_logo" />

    <!-- Editext for Search -->
    <EditText android:id="@+id/inputSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ordertracker_logo"
        android:hint="Buscar producto..."
        android:inputType="textVisiblePassword"/>

    <ListView
        android:id="@android:id/list"
        android:background="@color/mainListOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputSearch" />

</RelativeLayout>